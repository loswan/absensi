{
    "name": "ypmi/sistem-absensi-santri",
    "description": "Sistem Absensi Santri YPMI Al-Firdaus - Aplikasi web untuk mencatat kehadiran santri dalam kegiatan sholat dan ngaji",
    "type": "project",
    "keywords": ["absensi", "santri", "pondok-pesantren", "google-sheets", "php"],
    "license": "MIT",
    "authors": [
        {
            "name": "YPMI Al-Firdaus",
            "email": "admin@ypmi-alfirdaus.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "google/apiclient": "^2.12.6",
        "guzzlehttp/guzzle": "^6.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Ypmi\\Absensi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ypmi\\Absensi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "install-deps": "composer install --no-dev --optimize-autoloader",
        "setup": [
            "composer install",
            "echo 'Setup completed. Please configure credentials.json and update proses_absen.php'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
